<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mine_gray"
              android:orientation="vertical">

    <include layout="@layout/tab_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/setting_editinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/object"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            android:id="@+id/setting_modify_password"
            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="昵称"/>

            <TextView
                style="@style/profile_text_right"
                android:text="哈哈"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="生日"/>

            <TextView
                style="@style/profile_text_right"
                android:text="哈哈"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="我的地址"/>

            <TextView
                style="@style/profile_text_right"
                android:text="哈哈"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="性别"/>

            <TextView
                style="@style/profile_text_right"
                android:text="哈哈"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="地区"/>

            <TextView
                style="@style/profile_text_right"
                android:text="哈哈"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout
            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="个性签名"/>

            <TextView
                style="@style/profile_text_right"
                android:text="哈哈"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>