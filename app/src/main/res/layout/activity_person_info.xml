<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mine_gray"
              android:orientation="vertical">

    <include layout="@layout/tab_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_avatar"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_avatar"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout

            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="昵称"/>

            <TextView
                android:id="@+id/setting_nickname"
                style="@style/profile_text_right"
                android:text="未登录"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout

            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="年龄"/>

            <TextView
                android:id="@+id/setting_birth"
                style="@style/profile_text_right"
                android:text="未登录"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout

            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="我的地址"/>

            <TextView
                android:id="@+id/setting_address"
                style="@style/profile_text_right"
                android:text="未登录"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout

            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="性别"/>

            <TextView
                android:id="@+id/setting_sex"
                style="@style/profile_text_right"
                android:text="男"/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout

            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="地区"/>

            <TextView
                android:id="@+id/setting_region"
                style="@style/profile_text_right"
                android:text=""/>
        </RelativeLayout>

        <View style="@style/line"/>

        <RelativeLayout

            style="@style/setting_layout">

            <TextView
                style="@style/profile_text_left"
                android:text="个性签名"/>

            <TextView
                android:id="@+id/setting_motto"
                style="@style/profile_text_right"
                android:text="太懒了，什么都没有留下"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>